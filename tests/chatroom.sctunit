	@Test
	operation check_user_input_while_disconnected() {
		enter
		
		mock Network.get_server(0) returns ("localhost:8000")
		mock Network.get_server(1) returns ("localhost:8001")
		mock Network.get_nr_of_servers() returns (2)

		
